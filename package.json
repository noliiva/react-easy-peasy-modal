{
  "name": "react-easy-peasy-modal",
  "version": "0.1.0",
  "description": "Another react modal based on portal and context api",
  "main": "lib/index.js",
  "repository": "git@github.com:noliiva/react-easy-peasy-modal.git",
  "keywords": [
    "react",
    "modal",
    "portal",
    "context"
  ],
  "author": "Noliiva",
  "license": "MIT",
  "scripts": {
    "prepublish": "run-s review build",
    "prebuild": "rimraf lib/*",
    "build": "babel src -d lib",
    "build:watch": "babel src -w -d lib",
    "review": "run-s lint test",
    "lint": "run-s lint:js lint:style",
    "lint:js": "eslint src/**; exit 0",
    "lint:style": "stylelint -- \"./src/**/*.js\"",
    "pretest": "npm run test:clean",
    "test": "jest tests/**; exit 0",
    "test:clean": "rimraf ./coverage",
    "test:watch": "jest tests/** --watch",
    "test:watchAll": "jest tests/** --watchAll",
    "test:coverage": "open ./coverage/lcov-report/index.html"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "npm-run-all": "^4.1.2",
    "object-assign": "^4.1.1",
    "promise": "^8.0.1",
    "raf": "^3.4.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1"
  },
  "peerDependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "optionalDependencies": {
    "fsevents": "1.1.3"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      ".*": "./node_modules/babel-jest/build/index.js"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib"
    ],
    "setupFiles": [
      "raf/polyfill"
    ],
    "moduleNameMapper": {
      ".css$": "<rootDir>/tests/__mocks__/empty-module.js",
      "c3": "<rootDir>/tests/__mocks__/c3.js"
    }
  }
}
